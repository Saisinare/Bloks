<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Block-Blogs</title>
</head>
<link rel="shortcut icon" href="img/blocklogo.png" type="image/x-icon">
<link rel="stylesheet" href="css/navbar.css">
<link rel="stylesheet" href="css/blogs.css">
<link rel="stylesheet" href="css/myblogs.css">
<body>
    <nav id="nav">
        <div class="logo">
            <img src="img/logo.png" alt="">Blocks
        </div>
        <ul>
            <li ><a href="/" id="home">Home</a></li>
            <li class="this"><a href="/blogs">Blogs</a></li>
            <li><a href="/myblogs" id="contactus">My Blogs</a></li>
        </ul>
    </nav>
    <div id="main">
        <div class="showPad">
            <div class="menu"><button onclick="closeShowPad()"><i class="fa fa-times" style="font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif; font-style: normal; font-weight: bold;">X</i></button></div>
            <input type="text" id="_id" hidden>
            <div class="title"><input type="text" name="title" placeholder="Title" id="titleField" class="showtitle" readonly></div>
            <div class="content"><textarea name="content" id="content" placeholder="Enter Content" class="showcontent" readonly></textarea></div>
          </div>
        <% blogs.forEach(blog=>{%>
        <div class="blog" id=<%= blog._id %> onclick="showShowPad(this,event)">
          <%=blog.title%>
          <div>
            - <%= blog.author.username %>
          </div>
        </div>
        <%})%>
      </div>
    </div>
</body>
<script src="js/blogs.js"></script>
<script src="js/myBlogs.js"></script>
</html>
